<% if line_item == @current_item %>
<tr id="current_item">
<% else %>
<tr>
<% end %>
	<td id="quantity"><%= line_item.quantity %>&times;</td>
	<td><%= line_item.product.title %></td>
	<td class="line_item_price"><%= number_to_currency(line_item.total_price) %></td>
	<td><%= button_to 'delete', :controller =>'carts', :action => 'itemDelete',line_item: line_item.id, data: { confirm: 'Are you sure?' } %></td>
</tr>